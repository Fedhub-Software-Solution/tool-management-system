# Server Configuration
NODE_ENV=development
PORT=3000

# Database - Local PostgreSQL (pgAdmin4)
# Format: postgresql://username:password@host:port/database_name
# Default PostgreSQL connection (adjust username, password, and database name as needed)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tool_management

# JWT Authentication
# ⚠️ IMPORTANT: Change these secrets in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# CORS - Frontend URL (adjust port if your frontend runs on different port)
CORS_ORIGIN=http://localhost:5173

# Email (Future - Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-password

